@model HospitalProject.Models.ConsultationModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ConsultationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaConsulta" class="control-label"></label>
                <input asp-for="FechaConsulta" class="form-control" />
                <span asp-validation-for="FechaConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacienteID" class="control-label"></label>
                <select asp-for="PacienteID"
                        asp-items="@ViewBag.Patients"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="PacienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label>
                <select asp-for="DoctorID"
                        asp-items="@ViewBag.Doctors"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicamentoID" class="control-label"></label>
                <select asp-for="MedicamentoID"
                        asp-items="@ViewBag.Medicines"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="MedicamentoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
